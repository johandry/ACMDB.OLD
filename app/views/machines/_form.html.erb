<%= simple_form_for @machine, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= f.input :server_name %>
  <%= f.input :status %>
  <%= f.input :ip %>
  <%= f.input :os %>
  <%= f.input :environment %>
  <%= f.input :hosting %>
  <%= f.input :hoster %>
  <%= f.input :system %>
  <%= f.input :system_type %>
  <%= f.input :backup_server %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                machines_path, :class => 'btn' %>
  </div>
<% end %>
